{
  "include": [
    "lib/*.js",
    "typings.d.ts"
  ],

  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "module": "es2022",
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "types",
    "target": "ES2022",
    "resolveJsonModule": true
  }
}
